<%= render 'books/search' %>

<% if @books %>

  <h3>Choose your book </h3>

    <% @books.items.each_with_index do |book, n| %>

      <% unless @covers.items[n].get('LargeImage/URL') == nil %>

        <%= form_for @book do |f| %>

          <% item_attributes = book.get_element('ItemAttributes') %>
            <input name="book[title]" type="hidden" value="<%= item_attributes.get('Title') %>"/>
            <input name="book[authors]" type="hidden" value="<%= item_attributes.get('Author') %>"/>
<!--             Not working, won't use this.-->
            <input name="book[publication_date]" type="hidden" value="<%= item_attributes.get('Year') %>"/>
<!--             Not working -->
            <input name="book[isbn]" type="hidden" value="<%= book.get_element('ItemLink').get('URL') %>"/>
            <input name="book[isbn_10]" type="hidden" value="<%= @covers.items[n].get('ASIN') %>"/>
<!--             Not working -->
            <input name="book[description]" type="hidden" value="<%= item_attributes.get('ReleaseDate') %>"/>
            <input name="book[cover_image_link]" type="hidden" value="<%= @covers.items[n].get('LargeImage/URL') %>"/>
            <%= image_submit_tag(@covers.items[n].get('LargeImage/URL')) %>

        <% end %>
      <% end %>
    <% end %>
<% end %>