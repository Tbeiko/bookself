<div id='navbar'>
  <ul class='list-inline'>
    <li class="nav">
      <%= link_to root_path do %>
        <h2 id="title">Bookself</h2>
      <% end %>
    </li>
    <li class="nav pull-right">   
      <ul class='list-inline'>
        <% if current_user %>
<!--           <li><img id='user-photo' src='<%= current_user.image %>'></img></li>  -->
