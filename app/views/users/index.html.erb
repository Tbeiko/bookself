<div class='.big-photo'>
<%= render 'carousel' %>
</div>

<div id='user-search'>
  <form action='/explore' class='navbar-form form-inline'>
    <div class='form-group col-xs-9 col-xs-offset-1'>
      <input class='form-control search-bar' name='search' placeholder="Find someone's bookshelf" style="width: 100%;" type='text'>
    </div>
      <button class='btn btn-primary col-xs-offset-1 col-sm-offset-0' type='submit'>Search</button>
  </form>
</div>

<div class="container user-results">
  <div id="users">
    <%= render 'users_search' unless @searched_users.nil? %>
  </div>

  <h4 class='text-center' id="popular-title">POPULAR BOOKSHELVES</h4>

  <%= render 'user_cards', users: @popular_users %>
</div>