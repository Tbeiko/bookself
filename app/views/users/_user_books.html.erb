<% if @books.empty? && tab == "books" %>
  <h2>Hey, seems like you don't have any books.</h2>
  <h3><%= link_to "Why not add one?", new_book_path %></h3>
<% elsif @books.empty? && tab == "to-read" %>
  <h2>Hey, seems like you don't have anything you want to read.</h2>
  <h3><%= link_to "Why not see what others are reading", '/explore' %></h3>
<% else %>
  <div class='all-books' >
    <% @books.each do |book| %>
      <div class='col-sm-3 col-xs-6 book-row'>
        <div class='' >
          <a href='<%= book.amazon_link %>'>
            <img class='profile-book img-responsive' src='<%= book.cover_image_link %>'>
          </a>
          <h4><%= link_to "Add to my books", read_path(book: {id: book.id, user_book: {status: "read"}}), method: :post %></h4>
          <h4><%= link_to "Need to read", to_read_path(book: {id: book.id, user_book: {status: "to-read"}}), method: :post %></h4>
          <h4><%= link_to "Remove", delete_book_path(user_book: {book_id: book.id, user_id: current_user.id}), method: :post %></h4>
        </div>
      </div>
    <% end %>
  </div>

<% end %>