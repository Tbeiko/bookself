<div class='user-information'>

  <div class="text-center">
    <img class='img-circle' id='profile-photo' src='<%= @user.image %>'/>
    <h3><%= @user.first_name%> <%=@user.last_name%> </h3>
    <%= render 'shared/stats' %>
    <%= render 'following_form' if logged_in? %>
  </div>
</div>

<ul class='list list-inline'>
  <% if @user == current_user %>
    <li><h4>These are your books.</h4></li>  
    <li><h5><%= link_to "[add more]", new_book_path %></h5></li>
  <% else %>
    <li><h4>These are <%=@user.first_name %>'s books</h4></li>
  <% end %>
</ul>

<div class='all-books' >
  <% @books.each do |book| %>
    <div class='col-sm-3 col-xs-6 book-row'>
      <div class='' >
        <a href='<%= book.amazon_link %>'>
          <img class='profile-book img-responsive' src='<%= book.cover_image_link %>'>
        </a>
      </div>
    </div>
  <% end %>
</div>