$(document).ready(function() {
  followerCardHover();
}); 

function followerCardHover(){
  $(".follower-card").on('mouseenter', function() { 
    $(this).addClass('follower-card-hover');
  });
  $(".follower-card").on('mouseleave', function() { 
    $(this).removeClass('follower-card-hover');
  });
};